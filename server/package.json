    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dataloader": "^1.4.0",
    "express": "^4.16.4",
    "express-status-monitor": "1.2.5",
    "http-status-codes": "^1.3.2",
    "nedb": "^1.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
